@model Btl_web_nc.ViewModel.CreateAccountViewModel

@{
    ViewData["Title"] = "Tạo tài khoản mới";
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h2 class="text-primary">Tạo tài khoản mới</h2>
        <p class="text-muted">Nhập thông tin để tạo tài khoản mới</p>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <vc:validation-summary class="text-danger" />
                <div class="mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" id="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Name" class="form-label">Tên</label>
                    <input asp-for="Name" class="form-control" id="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="PassWord" class="form-label">Mật khẩu</label>
                    <input asp-for="PassWord" type="password" class="form-control" id="PassWord" />
                    <span asp-validation-for="PassWord" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="RoleId" class="form-label">Vai trò</label>
                    <select asp-for="RoleId" class="form-select" id="RoleId">
                        <option value="0">Quản trị viên</option>
                        <option value="1">Người dùng</option>
                    </select>
                    <span asp-validation-for="RoleId" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Tạo tài khoản</button>
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </form>
        </div>
    </div>
</div>