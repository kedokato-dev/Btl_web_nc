@model Btl_web_nc.ViewModel.CreateAccountViewModel

@{
    ViewData["Title"] = "Đăng ký";
}

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true">



<div class="container auth-container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card auth-card">
                <div class="card-header card-header-custom text-white">
                    <h3 class="text-center">Đăng ký tài khoản mới</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Register" asp-action="Index" method="post">
                        @Html.AntiForgeryToken()

                        @* <vc:validation-summary class="text-danger" /> *@

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="text-danger">
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                            </div>
                        }

                        <div class="form-group">
                            <label asp-for="Name" class="form-label">Họ và tên</label>
                            <i class="fas fa-user input-icon"></i>
                            <input asp-for="Name" class="form-control icon-input" id="registerName"
                                placeholder="Nhập họ và tên" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email" class="form-label">Email</label>
                            <i class="fas fa-envelope input-icon"></i>
                            <input asp-for="Email" class="form-control icon-input" id="registerEmail"
                                placeholder="Nhập địa chỉ email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="PassWord" class="form-label">Mật khẩu</label>
                            <i class="fas fa-lock input-icon"></i>
                            <input asp-for="PassWord" type="password" class="form-control icon-input"
                                id="registerPassword" placeholder="Tạo mật khẩu" />
                            <span asp-validation-for="PassWord" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
                            <i class="fas fa-lock input-icon"></i>
                            <input asp-for="ConfirmPassword" type="password" class="form-control icon-input"
                                id="registerConfirmPassword" placeholder="Xác nhận mật khẩu" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check">
                            <input type="checkbox" class="form-check-input" id="agreeTerms" name="AgreeTerms" required>
                            <label class="form-check-label" for="agreeTerms">Tôi đồng ý với <a href="#">điều khoản sử
                                    dụng</a> và <a href="#">chính sách bảo mật</a></label>
                        </div>

                        <button type="submit" class="btn btn-success btn-block custom-btn btn-register mt-4">
                            <i class="fas fa-user-plus mr-2"></i>Đăng ký
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>