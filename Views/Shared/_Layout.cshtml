<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Btl_web_nc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Btl_web_nc.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/css/phan_trang/ligne.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/phan_trang/paginate.css" asp-append-version="true">

    <link href="~/css/news.css" rel="stylesheet" />
