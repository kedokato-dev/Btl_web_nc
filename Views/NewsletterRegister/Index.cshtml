@model IEnumerable<Btl_web_nc.ViewModel.SubscriptionsViewModel>

<div class="container mt-5">
    <h2 class="text-primary">Danh sách đăng ký nhận tin</h2>
    <table class="table table-striped mt-4">
        <thead class="table-dark">
            <tr>
                <th>Tên người dùng</th>
                <th>Tên bản tin</th>
                <th>Tần suất</th>
                <th>Email</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subscription in Model)
            {
                <tr>
                    <td>@subscription.UserName</td>
                    <td>@subscription.NewsletterName</td>
                    <td>@subscription.Frequency</td>
                    <td>@subscription.UserEmail</td>
                    <td>
                        <a href="/NewsletterRegister/Edit/@subscription.Id" class="btn btn-warning btn-sm">Chỉnh sửa</a>
                        <a href="/NewsletterRegister/Unsubscribe/@subscription.Id" class="btn btn-danger btn-sm">Hủy</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/NewsletterRegister/Subscribe" class="btn btn-success">Đăng ký mới</a>
</div>