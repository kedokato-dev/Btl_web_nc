@model Btl_web_nc.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true">

<div class="container auth-container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card auth-card">
                <div class="card-header card-header-custom text-white">
                    <h3 class="text-center">Đăng nhập</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Login" asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="form-group">
                            <label asp-for="Email">Email</label>
                            <i class="fas fa-envelope input-icon"></i>
                            <input asp-for="Email" class="form-control icon-input" placeholder="Nhập địa chỉ email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Password">Mật khẩu</label>
                            <i class="fas fa-lock input-icon"></i>
                            <input asp-for="Password" class="form-control icon-input" placeholder="Nhập mật khẩu">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group form-check">
                            <input asp-for="RememberMe" class="form-check-input">
                            <label asp-for="RememberMe" class="form-check-label">Ghi nhớ đăng nhập</label>
                        </div>
                        
                        <button type="submit" class="btn btn-primary btn-block custom-btn btn-login mt-4">
                            <i class="fas fa-sign-in-alt mr-2"></i>Đăng nhập
                        </button>
                        
                        <div class="text-center mt-4">
                            <a href="#" class="forgot-password">Quên mật khẩu?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}